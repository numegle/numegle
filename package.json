{
  "name": "numegle",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "admin"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "start": "npm run start -w apps/api",
    "postinstall": "echo workspaces installed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


